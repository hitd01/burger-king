{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "plugin:react/recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "globals": {
    "arguments": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single"],
    "jsx-quotes": [2, "prefer-double"],
    "semi": [2, "always"],
    "camelcase": [2, { "properties": "always" }],
    "eqeqeq": [2, "smart"],
    "one-var-declaration-per-line": [2, "always"],
    "new-cap": 2,
    "no-case-declarations": 0,
    "curly": [2, "all"]
    // "react/prop-types": "off"
  }
}
